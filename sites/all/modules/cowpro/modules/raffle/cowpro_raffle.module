}
function getRand($proArr) {
	$data = '';
	$proSum = array_sum ( $proArr ); // 概率数组的总概率精度
	foreach ( $proArr as $k => $v ) { // 概率数组循环
		$randNum = mt_rand ( 1, $proSum );
		if ($randNum <= $v) {
			$data = $k;
			break;
		} else {
			$proSum -= $v;
		}
	}
	unset ( $proArr );
	return $data;
}
