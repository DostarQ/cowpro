						),
						'4' => array (
								'id' => 5,
								'prize' => '10元投资抵用券',
								'v' => 8,
								'type' => 'voucher',
								'amount' => '10'
						),
						'5' => array (
								'id' => 6,
								'prize' => '谢谢参与',
								'v' => 45,
								'type' => '',
								'amount' => '0'
						),
						'6' => array (
								'id' => 7,
								'prize' => '30积分',
								'v' => 8,
								'type' => 'points',
